@using Abc.Northwind.MvcWebbUI.Models
@using System.Threading.Tasks
@model Abc.Northwind.MvcWebbUI.Models.ProductAddViewModel
@{
    ViewBag.Title = "title";
    Layout = "~/Views/_AddLayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Insert</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <fieldset>
            <h3>Add a new product</h3>
            <div class="editor-label">
                @Html.LabelFor(model => model.Product.CategoryId)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Product.CategoryId)
                @Html.ValidationMessageFor(model => model.Product.CategoryId)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Product.ProductName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Product.ProductName)
                @Html.ValidationMessageFor(model => model.Product.ProductName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Product.UnitPrice)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Product.UnitPrice)
                @Html.ValidationMessageFor(model => model.Product.UnitPrice)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Product.UnitsInStock)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Product.UnitsInStock)
                @Html.ValidationMessageFor(model => model.Product.UnitsInStock)
            </div>
            <p>
                <br>
                <input type="submit" value="Add" class=" btn-success" />
            </p>
        </fieldset>
    }
    <div>
        @Html.ActionLink("", "~/Product/Index")
    </div>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>

